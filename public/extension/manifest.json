{
  "manifest_version": 3,
  "name": "GroqBot - Assistente WhatsApp",
  "version": "1.1.0",
  "description": "Painel de controle do bot GroqBot integrado ao WhatsApp Web",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://jlyqbwfuvdewvhaednvd.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
