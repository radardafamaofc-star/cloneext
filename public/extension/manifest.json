{
  "manifest_version": 3,
  "name": "GroqBot WhatsApp Extension",
  "version": "1.0",
  "description": "Integração do GroqBot com WhatsApp Web",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["*://*/api/*"]
}