{
    "manifest_version": 3,
    "name": "Lovable Infinite",
    "version": "1.0.2",
    "description": "Gere prompts infinitos e ilimitados.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "webRequest",
        "system.cpu",
        "sidePanel"
    ],
    "host_permissions": [
        "https://lovable.dev/*",
        "https://api.lovable.dev/*",
        "https://lovable-panel.vercel.app/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Abrir Lovable Infinite",
        "default_icon": {
            "16": "ICONS/icon.png",
            "48": "ICONS/icon.png",
            "128": "ICONS/icon.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "icons": {
        "16": "ICONS/icon.png",
        "48": "ICONS/icon.png",
        "128": "ICONS/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lovable.dev/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "notification.wav"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}